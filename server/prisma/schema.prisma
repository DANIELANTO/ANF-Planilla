generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String?
  role     Int      @default(0)  // 0: user, 1: admin
}

model Empleado {
  id        Int      @id @default(autoincrement())
  name      String
}
